
CREATE DATABASE IF NOT EXISTS ipg_db;

USE ipg_db;

CREATE TABLE ipg_table
(
name CHAR(30),
email VARCHAR(255) PRIMARY KEY,
photo VARCHAR(255),
date DATETIME
);

